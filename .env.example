# Linear Configuration
LINEAR_API_KEY=lin_api_your_key_here
LINEAR_TEAM_ID=your-team-id-here

# Storage Backend (defaults to 'basic-memory')
# Options: 'basic-memory' | 'notion'
STORAGE_BACKEND=basic-memory

# Basic Memory Configuration (used when STORAGE_BACKEND=basic-memory)
# Local markdown files for knowledge storage - simple and git-friendly
BASIC_MEMORY_ROOT_PATH=./.memory
BASIC_MEMORY_GLOBAL_PATH=./.memory/global

# Project Mappings (JSON)
# For basic-memory, map project names to Linear project IDs and local paths:
# {
#   "project-name": {
#     "linearProjectId": "uuid",
#     "path": "./.memory/projects/project-name"
#   }
# }
#
# For Notion backend, include database IDs:
# {
#   "project-name": {
#     "linearProjectId": "uuid",
#     "notionLessonsDbId": "uuid",
#     "notionLessonsDataSourceId": "uuid",
#     "notionDecisionsDbId": "uuid",
#     "notionDecisionsDataSourceId": "uuid"
#   }
# }
PROJECT_MAPPINGS={}

# Default project key (optional)
DEFAULT_PROJECT=

# Uncertainty Resolution Mode (optional - defaults to 'warn')
# Options: 'off' | 'warn' | 'block'
UNCERTAINTY_RESOLUTION_MODE=warn

# ============================================================================
# ADVANCED: Notion Configuration (only needed if STORAGE_BACKEND=notion)
# ============================================================================
# Notion requires an integration token and database setup
# See README.md for Notion setup instructions
# NOTION_API_KEY=secret_your_notion_integration_key_here
# NOTION_GLOBAL_LESSONS_DB_ID=
# NOTION_GLOBAL_LESSONS_DATA_SOURCE_ID=
# NOTION_GLOBAL_DECISIONS_DB_ID=
# NOTION_GLOBAL_DECISIONS_DATA_SOURCE_ID=
